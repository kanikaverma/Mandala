Mandala m = Create Mandala

Foreach i = 10.0 To 20.0: 
  Number x = 10.0
  Shape tempShape = Create Shape:
    Geo triangle 
    Size x
    Color red 
    Rotation 0.0
  Number y = 20.0
  Layer tempLayer = Create Layer:
    Radius y 
    Shape tempShape 
    Count 4 
    Offset 0.0 
    AngularShift 0
  addTo: (m, tempLayer)
draw: (m)
